  <!-- Bootstrap JS (opcional para interações Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    // Alerta de boas-vindas
    window.addEventListener('load', () => {
      alert('Bem-vindo à Creche do Papai! Vamos aprender juntos?');
    });

    // Destaque nas seções
    document.querySelectorAll('.materia-btn').forEach(botao => {
      botao.addEventListener('click', () => {
        document.querySelectorAll('.materia').forEach(sec => sec.classList.remove('highlight'));
        botao.closest('.materia').classList.add('highlight');
      });
    });

    // Mudança de tema
    function mudarTema(cor) {
      document.body.className = ''; // limpa temas anteriores
      document.body.classList.add(`tema-${cor}`);
    }
  </script>
